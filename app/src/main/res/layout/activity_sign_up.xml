<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:background="@drawable/signup"
        android:padding="20dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="560dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:alpha="0.5"
        android:background="@drawable/transparant_bg"
        android:gravity="center"
        android:radius="10dp" />

    <TextView
        android:id="@+id/tx1"
        style="@style/Base.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tx_name"
        style="@style/Base.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx1"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="271dp"
        android:layout_height="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="170dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/input_shape"
        android:hint="Name..."
        android:padding="15dp"
        android:textColorHint="#FAF8F8" />

    <TextView
        android:id="@+id/tx_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/user_name"
        android:text="Email"
        android:textColor="@color/black"
        style="@style/Base.CardView"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/tx_email"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/input_shape"
        android:hint="Email..."
        android:padding="15dp"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/tx_pn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/email"
        android:text="Phone Number"
        android:textColor="@color/black"
        style="@style/Base.CardView"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/tx_pn"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/input_shape"
        android:hint="Phone Number..."
        android:padding="15dp"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/tx_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/phone_number"
        android:text="Password"
        android:textColor="@color/black"
        style="@style/Base.CardView"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/tx_pass"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/input_shape"
        android:hint="Password..."
        android:padding="15dp"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/tx_Con_pass"
        style="@style/Base.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:text="Conform Password"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/tx_Con_pass"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/input_shape"
        android:hint="Conform Password..."
        android:padding="15dp"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/sign_up"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@id/confirm_password"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_shape"
        android:text="Sign Up"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tx_2"
        style="@style/Base.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="2dp"
        android:text="already have an account?"
        android:textColor="@color/black"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="180dp"
        android:layout_below="@+id/tx_2"
        android:text="Sign In"
        android:textColor="@color/black"
        android:textSize="13dp"/>


</RelativeLayout>


