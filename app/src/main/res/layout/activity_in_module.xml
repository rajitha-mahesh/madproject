<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InModule"
    android:background="@color/white">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/back_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_search_24" />


        </RelativeLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Physics"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_deisgn3">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:padding="25dp"
                    android:text="Measurments"
                    android:textColor="@color/black"
                    android:textSize="30dp" />


                <Button
                    android:id="@+id/measurment_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:textSize="30dp" />


                <Button
                    android:id="@+id/favBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|end"
                    android:layout_marginLeft="301dp"
                    android:layout_marginBottom="17dp"
                    android:background="@drawable/ic_baseline_favorite_border_24"
                    android:padding="30dp"
                    android:textSize="50dp" />

                <Button
                    android:id="@+id/test1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="301dp"
                    android:layout_marginEnd="14dp"
                    android:background="@color/teal_200"
                    android:text="Test"
                    app:cardCornerRadius="20dp"
                    android:onClick="selectTest"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_design4">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:padding="25dp"
                    android:text="Mechanics"
                    android:textColor="@color/black"
                    android:textSize="30dp" />


                <Button
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/favBtn1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|end"
                    android:layout_marginLeft="301dp"
                    android:layout_marginBottom="17dp"
                    android:background="@drawable/ic_baseline_favorite_border_24"
                    android:padding="30dp"
                    android:textSize="50dp" />

                <Button
                    android:id="@+id/test2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="301dp"
                    android:layout_marginEnd="14dp"
                    android:background="@color/teal_200"
                    android:text="Test"
                    app:cardCornerRadius="20dp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_deisgn3">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:padding="25dp"
                    android:text="Waves"
                    android:textColor="@color/black"
                    android:textSize="30dp" />


                <Button
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/favBtn2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|end"
                    android:layout_marginLeft="301dp"
                    android:layout_marginBottom="17dp"
                    android:background="@drawable/ic_baseline_favorite_border_24"
                    android:padding="30dp"
                    android:textSize="50dp" />

                <Button
                    android:id="@+id/test3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="301dp"
                    android:layout_marginEnd="14dp"
                    android:background="@color/teal_200"
                    android:text="Test"
                    app:cardCornerRadius="20dp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_design4">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:padding="25dp"
                    android:text="Thermal Physics"
                    android:textColor="@color/black"
                    android:textSize="30dp" />


                <Button
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/favBtn3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|end"
                    android:layout_marginLeft="301dp"
                    android:layout_marginBottom="17dp"
                    android:background="@drawable/ic_baseline_favorite_border_24"
                    android:padding="30dp"
                    android:textSize="50dp" />

                <Button
                    android:id="@+id/test4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="301dp"
                    android:layout_marginEnd="14dp"
                    android:background="@color/teal_200"
                    android:text="Test"
                    app:cardCornerRadius="20dp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"
            android:layout_margin="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_deisgn3">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:padding="25dp"
                    android:text="Gravitational Field"
                    android:textColor="@color/black"
                    android:textSize="30dp" />


                <Button
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/favBtn4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|end"
                    android:layout_marginLeft="301dp"
                    android:layout_marginBottom="17dp"
                    android:background="@drawable/ic_baseline_favorite_border_24"
                    android:padding="30dp"
                    android:textSize="50dp" />

                <Button
                    android:id="@+id/test5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="301dp"
                    android:layout_marginEnd="14dp"
                    android:background="@color/teal_200"
                    android:text="Test"
                    app:cardCornerRadius="20dp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>
    
    
</ScrollView>



