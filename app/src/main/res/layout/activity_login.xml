<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:background="@drawable/login"
        android:padding="20dp">

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:alpha="0.5"
        android:background="@drawable/transparant_bg"
        android:gravity="center"
        android:radius="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/log1"
                style="@style/Base.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:gravity="center"
                android:text="Login"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tx_email"
                style="@style/Base.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/log1"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/tx_email"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/input_shape"
                android:hint="Email..."
                android:textColorHint="@color/white" />

            <TextView
                android:id="@+id/tx_pass"
                style="@style/Base.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/tx_pass"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/input_shape"
                android:hint="Password..."
                android:textColorHint="@color/white" />

            <TextView
                android:id="@+id/tx_2"
                style="@style/Base.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_marginLeft="215dp"
                android:layout_marginTop="2dp"
                android:padding="20dp"
                android:text="froget password?"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <Button
                android:id="@+id/sign_up"
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tx_2"
                android:layout_marginLeft="67dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_shape"
                android:text="Sign in"
                android:textSize="16dp" />

            <Button
                android:id="@+id/google_btn"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_below="@id/sign_up"
                android:layout_marginLeft="74dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_shape"
                android:text="sign in with google"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tx_3"
                style="@style/Base.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/google_btn"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="2dp"
                android:text="Don\'t have an account yet?"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/txt_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx_3"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="6dp"
                android:text="Register Now"
                android:textColor="@color/black"
                android:textSize="13dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>


